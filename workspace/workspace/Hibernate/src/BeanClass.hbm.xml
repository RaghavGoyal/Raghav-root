<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.hib.java.BeanClass" table="user">

<id name="id" type="int"></id>    <!-- AutoIncrement or Generator -->
<property name="name" type="string"></property>
<property name="address" type="string"></property>

</class>

<class name="com.hib.java.BeanClass2" table="stu">
<id name="id" type="int"></id>    <!-- AutoIncrement or Generator -->
<property name="name" type="string"></property>
<property name="pwd" type="string"></property>
<property name="address" type="string"></property>

</class>
</hibernate-mapping>